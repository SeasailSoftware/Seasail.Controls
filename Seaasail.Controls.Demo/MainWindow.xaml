<Window
    x:Class="Seaasail.Controls.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Seasail.Controls;assembly=Seasail.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Seaasail.Controls.Demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Background="Black">
            <controls:Dashboard Value="{Binding ElementName=slider, Path=Value}" Width="300" Height="300" Skin="Flow" x:Name="dashboard"/>
            <Button Click="Begin" Margin="0,20" Content="Bigin" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
